@model NidTid.WebUI.Models.SpreadsheetReportsModel
    <fieldset>
        <legend>Filtrerade tidrapporter <p class="pull-right">Total tid: <b>@Model.TimeTotal</b></p></legend>
    </fieldset>
    <div class="row-fluid">
        <div class="span3">
            <h4>Debiterbart: <b>@Model.DebTotal</b></h4>
        </div>
        <div class="span3">
            <h4>Ej Debiterbart: <b>@Model.EjDebTotal</b></h4>
        </div>
        <div class="span3">
            <a> @{
                Html.ActionLink("Hämta som PDF", "SpreadsheetPdf", new { queryModel = Model });
            }PDF Tack!</a>
        </div>
    </div>

        <div>
            <table class="table table-striped tablesorter">
                <thead>
                     <tr>
                    <th>
                        Datum
                    </th>
                    <th>
                        Kund
                    </th>
                    <th>
                        Projekt
                    </th>
                    <th>
                        Deb
                    </th>
                    <th>
                        Ej Deb
                    </th>
                    <th>
                        Användare
                    </th>

                    <th></th>
                </tr>
                </thead>
                <tbody>
           

            @foreach (var item in Model.Reports) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.Customer.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deb)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EjDeb)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Name)
                    </td>

                    <td>
                        <a class="btn btn-info btn-mini"><i class="icon-edit icon-white"></i>Ändra</a> |
                        <a class="btn btn-danger btn-mini"><i class="icon-trash icon-white"></i>Ta bort</a>
                    </td>
                </tr>
            }
            </tbody>
            </table>
            
        </div>