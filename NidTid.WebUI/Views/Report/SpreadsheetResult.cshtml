@model IEnumerable<NidTid.Domain.Entities.Report>

        <div>
            <table class="table table-striped tablesorter">
                <thead>
                     <tr>
                    <th>
                        Datum
                    </th>
                    <th>
                        Kund
                    </th>
                    <th>
                        Projekt
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Deb)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EjDeb)
                    </th>
                    <th>
                        Körsträcka
                    </th>
                    <th>
                        Användare
                    </th>

                    <th></th>
                </tr>
                </thead>
                <tbody>
               

            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.Customer.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deb)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EjDeb)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Km)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Name)
                    </td>

                    <td>
                        <a class="btn btn-info btn-mini"><i class="icon-edit icon-white"></i>Ändra</a> |
                        <a class="btn btn-danger btn-mini"><i class="icon-trash icon-white"></i>Ta bort</a>
                    </td>
                </tr>
            }
            </tbody>
            </table>
            
        </div>