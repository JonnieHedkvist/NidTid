@model NidTid.Domain.Entities.Customer

<div class="span9 offset3">
    <div class="row-fluid" id="newCustomerDiv">
        <div class="span12 well">
            <fieldset>
                <legend>Skapa ny kund</legend>
                <form id="customerForm" action="" method="post">
                    <div class="row-fluid">
                        <div class="span4">
                            @Html.LabelFor(model => model.Name)
                            @Html.EditorFor(model => model.Name)
                            @Html.LabelFor(model => model.OrgNr)
                            @Html.EditorFor(model => model.OrgNr)
                            @Html.LabelFor(model => model.Adress)
                            @Html.EditorFor(model => model.Adress)
                            @Html.LabelFor(model => model.PostNr)
                            @Html.EditorFor(model => model.PostNr)
                            @Html.LabelFor(model => model.PostOrt)
                            @Html.EditorFor(model => model.PostOrt)
                        </div>
                        <div class="span4">
                            @Html.LabelFor(model => model.Phone1)
                            @Html.EditorFor(model => model.Phone1)
                            @Html.LabelFor(model => model.Phone2)
                            @Html.EditorFor(model => model.Phone2)
                            @Html.LabelFor(model => model.Email)
                            @Html.EditorFor(model => model.Email)
                            @Html.LabelFor(model => model.Moms)
                            @Html.EditorFor(model => model.Moms)
                            @Html.EditorFor(model => model.Id)
                            <div class="row-fluid">
                                <br/>
                                <a class="btn btn-locked btn-success" id="saveCustomer"><i class="icon-ok icon-white"></i>Spara</a>
                            </div>
                        </div>
                    </div>
                </form>
            </fieldset>
        </div>
    </div>
</div>