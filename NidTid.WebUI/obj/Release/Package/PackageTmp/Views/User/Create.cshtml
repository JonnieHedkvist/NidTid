@model NidTid.Domain.Entities.User

<div class="span9 offset3">
    <div class="row-fluid" id="createUserDiv">
        <div class="span12 well">
            <fieldset>
                <legend>Registrera ny användare</legend>
                <form id="userForm" action="" method="post">
                    <div class="row-fluid">
                        <div class="span4">
                            @Html.LabelFor(model => model.Name)
                            @Html.EditorFor(model => model.Name)
                            @Html.LabelFor(model => model.PersNr)
                            @Html.EditorFor(model => model.PersNr)
                            @Html.LabelFor(model => model.Adress)
                            @Html.EditorFor(model => model.Adress)
                            @Html.LabelFor(model => model.PostNr)
                            @Html.EditorFor(model => model.PostNr)
                            @Html.LabelFor(model => model.PostOrt)
                            @Html.EditorFor(model => model.PostOrt)
                        </div>
                        <div class="span4">
                            @Html.LabelFor(model => model.Phone)
                            @Html.EditorFor(model => model.Phone)
                            @Html.LabelFor(model => model.Email)
                            @Html.EditorFor(model => model.Email)
                            @Html.LabelFor(model => model.Password)
                            @Html.EditorFor(model => model.Password)
                            @Html.LabelFor(model => model.Salary)
                            @Html.EditorFor(model => model.Salary)
                            @Html.LabelFor(model => model.Tax)
                            @Html.EditorFor(model => model.Tax)
                            @Html.EditorFor(model => model.Id)
                        </div>
                        <div class="span4">
                            @Html.LabelFor(model => model.Role)
                            <select name="Role"> 
                                <option value="Admin">Admin</option>
                                <option value="User">User</option>
                            </select>
                            <a class="btn btn-locked btn-success" id="saveUser"><i class="icon-ok icon-white"></i>Spara</a>
                        </div>
                    </div>
                </form>
            </fieldset>
        </div>
    </div>
</div>